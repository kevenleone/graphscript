{
  "name": "graphscript",
  "version": "1.3.1",
  "main": "src/index.ts",
  "repository": "https://github.com/kevenleone/graphscript.git",
  "author": "Keven <keven.santos.sz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:server": "nodemon src/index.ts",
    "dev:worker": "nodemon --exec ts-node src/worker.ts",
    "start:server": "link-module-alias && node src/index.js",
    "start:worker": "link-module-alias && node src/worker.js",
    "build": "sh scripts/build.pkg.sh",
    "test:server": "link-module-alias && NODE_ENV=test ts-node src/index.ts",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:coverage": "link-module-alias && NODE_ENV=test jest --coverage",
    "test:coveralls": "link-module-alias && NODE_ENV=test jest --forceExit --detectOpenHandles --coverage --coverageReporters=text-lcov | coveralls",
    "test:ci": "start-server-and-test test:server http://localhost:3333 test",
    "test:cicov": "start-server-and-test test:server http://localhost:3333 test:coveralls",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "pretest": "link-module-alias"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/bull": "^3.12.0",
    "@types/bull-board": "^0.6.0",
    "@types/express": "^4.17.2",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.1.0",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/nodemailer": "^6.2.2",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "coveralls": "^3.0.9",
    "cross-env": "^7.0.0",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "graphql-request": "^1.8.2",
    "husky": "^4.0.10",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "sqlite3": "^4.1.1",
    "start-server-and-test": "^1.10.6",
    "ts-jest": "^25.1.0",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "apollo-server-express": "^2.9.8",
    "bcryptjs": "^2.4.3",
    "bull": "^3.12.1",
    "bull-board": "^0.6.0",
    "class-validator": "^0.11.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "jsonwebtoken": "^8.5.1",
    "link-module-alias": "^1.2.0",
    "nodemailer": "^6.3.1",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "pg": "^7.17.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.5.0",
    "type-graphql": "^0.17.5",
    "typeorm": "^0.2.20",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.2.1"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint:fix",
      "cross-env CI=true yarn test --bail --findRelatedTests --forceExit"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "_moduleAliases": {
    "~": "src"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
